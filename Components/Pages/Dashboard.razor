@page "/dashboard"
@using facturas.Components.Data
@using facturas.Components.Servicios
@rendermode InteractiveServer
@inject ServicioControlador ServicioControlador

<PageTitle>Dashboard</PageTitle>

<div class="warm-layout">
    <h1 class="mb-4 fw-bold">Tablero de Control</h1>

    @if (datos == null)
    {
        <div class="d-flex justify-content-center py-5">
            <div class="spinner-border" style="color: var(--primary-warm);" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
        </div>
    }
    else
    {
        <div class="row g-4 mb-4">
            <div class="col-md-4">
                <div class="warm-card accent-primary">
                    <div class="stat-label">Mejor Cliente</div>
                    <div class="stat-value text-truncate" title="@datos.TopClienteNombre">@datos.TopClienteNombre</div>
                    <div class="stat-sub">
                        Volumen de compras: <span class="fw-bold" style="color: var(--primary-warm)">@datos.TopClienteTotal.ToString("C")</span>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="warm-card accent-success">
                    <div class="stat-label">Mejor Mes</div>
                    <div class="stat-value">@datos.NombreMes</div>
                    <div class="stat-sub">
                        Facturación récord: <span class="fw-bold">@datos.TopMesTotal.ToString("C")</span>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="warm-card accent-warning">
                    <div class="stat-label">Producto Estrella</div>
                    <div class="stat-value text-truncate">@datos.TopProductoNombre</div>
                    <div class="stat-sub">
                        Unidades vendidas: <span class="fw-bold">@datos.TopProductoCantidad</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4 mb-4">
            <div class="col-md-3">
                <div class="warm-card accent-info d-flex flex-column justify-content-center">
                    <div class="stat-label">Ticket Promedio</div>
                    <div class="stat-value">@datos.TicketPromedio.ToString("C")</div>
                    <div class="stat-sub">Base: @datos.TotalFacturasEmitidas ventas</div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="warm-card d-flex flex-column justify-content-center">
                    <div class="stat-label">Ventas Mes Actual</div>
                    <div class="stat-value">@datos.VentasMesActual.ToString("C")</div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="warm-card d-flex flex-column justify-content-center">
                    <div class="stat-label">Total Clientes</div>
                    <div class="stat-value">@datos.TotalClientesUnicos</div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="warm-card d-flex flex-column justify-content-center">
                    <div class="stat-label">Mayor Ingreso (Item)</div>
                    <div class="stat-value fs-4 text-truncate">@datos.ProductoMasRentableNombre</div>
                    <div class="stat-sub text-success">@datos.ProductoMasRentableTotal.ToString("C")</div>
                </div>
            </div>
        </div>

        <div class="warm-card p-0 overflow-hidden mt-5">
            <div class="p-4 border-bottom" style="border-color: #f0ebe6 !important;">
                <h4 class="mb-0 fw-bold fs-5">Actividad Reciente</h4>
                <p class="text-muted mb-0 small">Últimas 5 transacciones registradas</p>
            </div>

            <div class="table-responsive">
                <table class="table mb-0">
                    <thead style="background-color: #faf9f8;">
                        <tr>
                            <th class="ps-4">ID</th>
                            <th>Fecha</th>
                            <th>Cliente</th>
                            <th class="text-end pe-4">Monto Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var fact in datos.UltimasFacturas)
                        {
                            <tr>
                                <td class="ps-4 text-muted">#@fact.FacturaID</td>
                                <td>@fact.Fecha.ToShortDateString()</td>
                                <td class="fw-bold">@fact.Nombre</td>
                                <td class="text-end pe-4 fw-bold" style="color: var(--primary-warm);">@fact.TotalFactura.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-3 text-end">
            <span class="badge bg-light text-secondary border fw-normal">
                Datos actualizados en tiempo real
            </span>
        </div>
    }
</div>

@code {
    private DatosDashboard? datos;

    protected override async Task OnInitializedAsync()
    {
        await Task.Delay(300);
        datos = await ServicioControlador.ObtenerDashboardAsync();
    }
}