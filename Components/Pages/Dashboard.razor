@page "/dashboard" 
@using facturas.Components.Data
@using facturas.Components.Servicios
@rendermode InteractiveServer
@inject ServicioControlador ServicioControlador


<PageTitle>Dashboard</PageTitle>

<h1 class="mb-4">Tablero de Control</h1>

@if (datos == null)
{
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Cargando...</span>
    </div>
}
else
{  
    <div class="row">
        <div class="card text-white bg-primary h-100 shadow">
            <div class="card-header">Mejor Cliente</div>
            <div class="card-body">
                <h5 class="card-title display-6">@datos.TopClienteNombre</h5>
                <p class="card-text fs-4">
                    Compras: @datos.TopClienteTotal.ToString("C")
                </p>
            </div>
            <div class="card-footer text-white-50">
                Cliente con mayor volumen de compras
            </div>
        </div>
    </div>
    
    <div class="col-md-4 mb-4">
        <div class="card text-white bg-success h-100 shadow">
            <div class="card-header">Mejor Mes</div>
                <div class="card-body">
                    <h5 class="card-title-display-6">@datos.NombreMes</h5>
                    <p class="card-text fs-4">
                        Ventas: @datos.TopMesTotal.ToString("C")
                    </p>
                </div>
              <div class="card-footer text-white-50">
                    Mes con Mayor facturacion
              </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card text-dark bg-warning h-100 shadow">
            <div class="card-header">Producto mas vendido</div>
            <div class="card-body">
                <h5 class="card-title display-6">@datos.TopProductoNombre</h5>
                <p class="card-text fs-4">
                    Unidades: @datos.TopProductoCantidad
                </p>
            </div>
            <div class="card-footer text-dark-50">
                Articulo mas vendido
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="card text-white bg-info h-100 shadow">
                <div class="card-header">🏷️ Ticket Promedio</div>
                <div class="card-body">
                    <h5 class="card-title display-6">@datos.TicketPromedio.ToString("C")</h5>
                    <p class="card-text fs-5">
                        En @datos.TotalFacturasEmitidas ventas
                    </p>
                </div>
                <div class="card-footer text-white-50">
                    Valor medio de venta
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-bottom-0">
                    <h4 class="mb-0 mt-2">⚡ Actividad Reciente (Últimas 5 ventas)</h4>
                </div>
                <div class="card-body p-0">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>#ID</th>
                                <th>Fecha</th>
                                <th>Cliente</th>
                                <th class="text-end">Monto</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var fact in datos.UltimasFacturas)
                            {
                                <tr>
                                    <td>@fact.FacturaID</td>
                                    <td>@fact.Fecha.ToShortDateString()</td>
                                    <td>@fact.Nombre</td>
                                    <td class="text-end fw-bold">@fact.TotalFactura.ToString("C")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="alert alert-light mt-4 border">
        <strong>Nota:</strong> Estadísticas actualizadas en tiempo real.
    </div>

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card border-primary mb-3">
                <div class="card-body text-primary">
                    <h5 class="card-title">Ventas Este Mes</h5>
                    <p class="card-text display-6">@datos.VentasMesActual.ToString("C")</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-secondary mb-3">
                <div class="card-body text-secondary">
                    <h5 class="card-title">Clientes Totales</h5>
                    <p class="card-text display-6">@datos.TotalClientesUnicos</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-success mb-3">
                <div class="card-body text-success">
                    <h5 class="card-title">Mayor Ingreso: @datos.ProductoMasRentableNombre</h5>
                    <p class="card-text display-6">@datos.ProductoMasRentableTotal.ToString("C")</p>
                </div>
            </div>
        </div>
    </div>

}

@code {
    private DatosDashboard? datos;

    protected override async Task OnInitializedAsync()
    {
        await Task.Delay(300);
        datos = await ServicioControlador.ObtenerDashboardAsync();
    }

}
